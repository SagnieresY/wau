
<% if @page == "show" %>
  $("#invest-show-forecasted-amount").html( "<%= j render partial: '/partials/info-box/forecasted_amount_invest_show', investment: @installment.investment %>" );
  $("#invest-show-unlocked-amount").html( "<%= j render 'investments/total_unlocked', investment: @installment.investment %>" );
  $("#invest-show-table-<%= @installment.id %> > td:nth-child(2) > div").removeClass().addClass("table-status rescinded-background-color").text('<%= t("investments.show.table.second_column.content.status_three") %>');
  <% if @investment.completed? %>
    console.log(<%= @investment.completed? %>)
    $("#investment-completed-show").removeClass().addClass("table-status unlocked-background-color").text("<%= t("investments.show.mid_section.status_one") %>");
    $("#invest-show-forecasted-amount").removeClass().addClass("invest-show-info-child-box unlocked-background-color white-text");
    $("#invest-show-unlocked-amount").removeClass().addClass("invest-show-info-child-box unlocked-background-color white-text");
    $("#invest-show-focus-area-show").removeClass().addClass("invest-show-info-child-box unlocked-background-color white-text");
    $("#invest-show-focus-area").removeClass().removeClass().addClass("white-text green-dropshadow-card");
    console.log("done")
  <% else %>
    console.log($(".investment-completed-show"));
  <% end %>

<% elsif @page == 'home' %>
  $("#forecasted-amount").html( "<%= j render '/partials/info-box/forecasted_amount_box' %>" );
  $("#investment_count_home").html( "<%= j render '/partials/info-box/investment_count_box' %>" );
  $("#<%= @installment.id %>").remove();

  var timeChart = Chartkick.charts["home_timeseries"];
  var newTimeData =  [{name: "Unlocked", data: <%= raw cumulate_my_hash(@unlocked_installments.current_year_monthly_amount(year_range(@year))).to_json %> } ,
  {name: "Locked", data: <%= raw cumulate_my_hash(@locked_installments.current_year_monthly_amount(year_range(@year))).to_json %> }];
  timeChart.updateData(newTimeData);

  var faChart = Chartkick.charts["home_focus_area"];
  var newFAData =  [{name: "Unlocked", data: <%= raw @unlocked_installments_fa_chart.to_json %> } ,
  {name: "Locked", data: <%= raw @locked_installments_fa_chart.to_json %> }];
  faChart.updateData(newFAData);

<% end %>
