          <li><a data-toggle="tab" href="#day">Day</a></li>
          <li><a data-toggle="tab" href="#week">Week</a></li>
          <li class="active"><a data-toggle="tab" href="#month">Month</a></li>
          <li><a data-toggle="tab" href="#year">Year</a></li>
        </ul>
        <div class="tab-content">
            <div id="day" class="tab-pane fade">
                <div id="dash_timeseries_day" class="dashboard-chart"></div>
            </div>
            <div id="week" class="tab-pane fade">
                <div id="dash_timeseries_week" class="dashboard-chart"></div>
            </div>
            <div id="month" class="tab-pane fade in active">
                <div id="dash_timeseries_month" class="dashboard-chart"></div>
            </div>
            <div id="year" class="tab-pane fade">
                <div id="dash_timeseries_year" class="dashboard-chart"></div>
            </div>
        </div>
    </div>
</div>
