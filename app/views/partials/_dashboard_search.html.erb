    var selectiontags = ''
    selection.childNodes.forEach((child) =>Â {
      selectiontags += child.innerHTML
    });
    if (!selectiontags.includes(tag.replace("&","&amp;"))){
    selection.insertAdjacentHTML('afterbegin',`<h7 class="tag"> ${tag}</h7>`)
    }
  }
  function clearSuggestions(){
    ['focusSuggestions'].forEach((selection) => { // just add some tags whenever you add a new searchfield
      document.getElementById(selection).childNodes.forEach((child) => {
        child.remove();
      });
    });

  }

  function mainSearch(){
    var url = '?search=true'
    var fields = ['focus_selection','ngo_selection','neighborhood_selection','project_selection']
    fields.forEach((selection) => {
      var field = selection.split('_')[0]
      console.log(field)
      var tags = ''
      document.getElementById(selection).childNodes.forEach((child)=>{
        tags += `${child.innerHTML.replace("&amp;",'and')},`
        console.log(child.innerHTML)
      });
      url += `&${field}=${tags}`
    })
    url += `&min_date=${document.getElementById('min-date').value}`

    url += `&max_date=${document.getElementById('max-date').value}`
      window.location.replace(`${url}`)
  };
  </script>
<% end %>
